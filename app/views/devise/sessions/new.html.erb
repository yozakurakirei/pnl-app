<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-area">
    <div class="field">
      <%= f.label :name, "お名前", class: "field-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "field-input" %>
    </div>
    
    <div class="field">
      <%= f.label :email, class: "field-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
    </div>
  
    <div class="field">
      <%= f.label :password, class: "field-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "field-input" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field-remember">
        <%= f.check_box :remember_me, class: "remember-check" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.submit "ログイン", class: "field-btn" %>
    </div>
  <% end %>
  
  <div class="field-text">
    <%= render "devise/shared/links" %>
  </div>
    
  </div>
